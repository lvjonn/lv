<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                                           http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>iot.controller.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>CreateShipmentServlet</servlet-name>
        <servlet-class>iot.controller.CreateShipmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewShipmentServlet</servlet-name>
        <servlet-class>iot.controller.ViewShipmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAddressServlet</servlet-name>
        <servlet-class>iot.controller.ViewAddressServlet</servlet-class>
