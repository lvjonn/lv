    <servlet>
        <servlet-name>AddAddressServlet</servlet-name>
        <servlet-class>iot.controller.AddAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteAddressServlet</servlet-name>
        <servlet-class>iot.controller.deleteAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findAddressServlet</servlet-name>
        <servlet-class>iot.controller.findAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editAddressServlet</servlet-name>
        <servlet-class>iot.controller.editAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectAddressServlet</servlet-name>
        <servlet-class>iot.controller.SelectAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateShipmentServlet</servlet-name>
        <url-pattern>/CreateShipmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewShipmentServlet</servlet-name>
        <url-pattern>/ViewShipmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAddressServlet</servlet-name>
        <url-pattern>/ViewAddressServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAddressServlet</servlet-name>
        <url-pattern>/AddAddressServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteAddressServlet</servlet-name>
        <url-pattern>/deleteAddressServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findAddressServlet</servlet-name>
        <url-pattern>/findAddressServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editAddressServlet</servlet-name>
        <url-pattern>/editAddressServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectAddressServlet</servlet-name>
        <url-pattern>/SelectAddressServlet</url-pattern>
    </servlet-mapping>
</web-app>
